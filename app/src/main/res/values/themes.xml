<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnNong"  parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pink_light</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Custom font-family -->
        <item name="android:buttonStyle">@style/style_button</item>
        <item name="android:textViewStyle">@style/style_textView</item>
        <item name="android:editTextStyle">@style/style_editText</item>
        <item name="android:listViewStyle">@style/style_listView</item>
        <item name="android:spinnerDropDownItemStyle">@style/style_spinner</item>
        <!--        <item name="android:dropDownSpinnerStyle">@style/style_spinner</item>-->

    </style>


    <!-- Custom Font 적용 -->
    <style name="style_button" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/custon_fontfamily</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>
    <style name="style_textView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/custon_fontfamily</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_editText" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/custon_fontfamily</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_listView" parent="android:Widget.ListView">
        <item name="android:fontFamily">@font/nanumsquareround_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_spinner" parent="android:Widget.Spinner">
        <item name="android:fontFamily">@font/nanumsquareround_regular</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>